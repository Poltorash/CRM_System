<Window x:Class="CRM_System.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM_System"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F1F4FB"/>
            <Setter Property="BorderBrush" Value="#FFCEB46F"/>
            <Setter Property="Foreground" Value="#FFCEA345"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Century Gothic"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Background="#F1F4FB"/>
        <Grid Background="#F1F4FB"/>
        <Grid Grid.Column="1" Background="#F1F4FB"/>
        <StackPanel Grid.RowSpan="2">
            <Image Source="Resources/logo.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50"/>
            <Button Content="Аналитика"/>
            <Button Content="Воронка продаж"/>
            <Button Content="Клиенты"/>
            <Button Content="Заявки"/>
            <Button Content="Отчет"/>
        </StackPanel>
        <Border Margin="5" x:Name="SearchClient"  Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" CornerRadius="20" Grid.Column="1" Background="White" BorderBrush="#FFCEA345" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="Search"  Background="White" BorderBrush="White"/>
                <Image Source="Resources/Search2.png" Height="20" Width="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
